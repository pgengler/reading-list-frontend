<div class="book-list">
  <ul>
    {{#each record in sortedRecords}}
      <li>
        {{#link-to "index.list.record" record}}
          {{record.book.title}}
        {{/link-to}}
        {{#if record.book.authors}}
          <br>
          &raquo; {{author-list record.book}}
        {{/if}}
      </li>
    {{/each}}
  </ul>
</div>

{{outlet}}
